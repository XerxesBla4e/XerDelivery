<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2c2c2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="146dp"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="143dp"
            android:layout_marginRight="143dp"
            android:src="@drawable/pizza" />

        <Button
            android:id="@+id/btnprod"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_below="@+id/img"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:text="PRODUCTS"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnshop"
            android:layout_width="338dp"
            android:layout_height="68dp"
            android:layout_below="@+id/img"
            android:layout_alignStart="@+id/btnprod"
            android:layout_alignLeft="@+id/btnprod"
            android:layout_alignEnd="@+id/btnprod"
            android:layout_alignRight="@+id/btnprod"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="247dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginRight="-10dp"
            android:text="TRACK ORDER"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnord"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_below="@+id/img"
            android:layout_alignStart="@+id/btnshop"
            android:layout_alignLeft="@+id/btnshop"
            android:layout_alignEnd="@+id/btnshop"
            android:layout_alignRight="@+id/btnshop"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="339dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="#4CAF50"
            android:text="MAKE ORDER"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnbtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@+id/img"
            android:layout_alignStart="@+id/btnshop"
            android:layout_alignLeft="@+id/btnshop"
            android:layout_alignEnd="@+id/btnshop"
            android:layout_alignRight="@+id/btnshop"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="432dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:text="VIEW LOCATIONS"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />
    </RelativeLayout>
</ScrollView>