<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="7dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37474f"
        android:padding="15dp">

        <ImageView
            android:id="@+id/recycleritemimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/recycleritem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/recycleritemimg"
            android:background="@drawable/layout_bg"
            android:hint="ItemName"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/recyclerprice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycleritem1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/recycleritemimg"
            android:background="@drawable/layout_bg"
            android:hint="ItemPrice"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/details"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerprice1"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/recycleritemimg"
            android:text="VIEW"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="@color/black"></Button>

    </RelativeLayout>
</androidx.cardview.widget.CardView>